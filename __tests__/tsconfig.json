{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "__tests__/*": ["__tests__/*"],
      "src/*": ["src/*"],
      "*": [
        "*",
        "src/@types/*",
        "node_modules/@types"
      ]
    },
    "typeRoots": [
      "../src/@types",
      "../node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../src/**/*.ts",
  ]
}
